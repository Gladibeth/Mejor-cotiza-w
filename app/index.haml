                %a.nav-link.active{:href => "#home-serviteca", "data-scroll" => ""} Pide tu cotización
              %li.nav-item
                %a.nav-link{:href => "#team-about", "data-scroll" => ""} Trabaja con nosotros

      - slider = [{image: "assets/img/slider/0.jpg", title: 'Recibe nuestros presupuestos en solo tres paso y Gratis!', description: 'Recibe nuestros presupuestos en solo tres paso y Gratis!'}, {image: "assets/img/slider/2.jpeg", title: 'Mejor Cotiza', description: 'Recibe nuestros presupuestos en solo tres paso y Gratis!'},{image: "assets/img/slider/3.jpeg", title: 'Mejor Cotiza', description: 'Recibe nuestros presupuestos en solo tres paso y Gratis!'}]
      .carousel-content
        .carousel-divisor
          .carrusel-slider
            .single-item
              - slider.each_with_index do |slide|
                .item
                  %img.img-responsive{:src => "#{slide[:image]}"}/
                  .mask-item
                    .banner-info
                      -# %h1.title-banner.wow.animated.fadeInUp{ 'data-wow-duration' => '1500ms', 'data-wow-delay' => '.2s'  }= slide[:title]
                      %p.wow.animated.fadeInUp{ 'data-wow-duration' => '1500ms', 'data-wow-delay' => '.9s'  }= slide[:description]
